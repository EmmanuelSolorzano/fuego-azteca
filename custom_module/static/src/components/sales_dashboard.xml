<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl.OwlSalesDashboard" owl="1">
        <div class="container" style="width: 75%; margin-top: 20px; padding: 20px;">
            <div class="row h-100 align-items-center">
                <div class="col">
                    <h2>Archivo de Amazon</h2>
                    <div 
                        class="drop-area" 
                        t-ref="amazon" 
                        t-on-click="c_amazon"
                        
                    >

                        <p class="text-center">Arrasta aquí tu archivo .csv</p>
                    </div>
                </div>
                <div class="col">
                    <h2>Clientes</h2>
                    <div class="drop-area" t-ref="clientes" t-on-click="c_clientes">
                        <p class="text-center">Arrasta aquí tu archivo .csv</p>
                    </div>
                </div>
                <div class="col">
                    <h2>Inventario</h2>
                    <div class="drop-area" t-ref="inventario" t-on-click="c_inventario">
                        <p class="text-center">Arrasta aquí tu archivo .csv</p>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>